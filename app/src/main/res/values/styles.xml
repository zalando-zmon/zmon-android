<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.Drawer">
        <item name="android:background">@color/zalando_orange</item>
    </style>

    <style name="AppTheme.Navigation"></style>

    <style name="AppTheme.Navigation.Item">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="AppTheme.Navigation.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="AppTheme.Toolbar.Item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.Toolbar.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="AppTheme.List">
    </style>

    <style name="AppTheme.List.Item">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="AppTheme.List.Item.Text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/list_item_title</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.List.Item.SmallText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/list_item_subtitle</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.Login"></style>

    <style name="AppTheme.Login.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.Login.Button">
        <item name="android:background">@color/zalando_orange</item>
    </style>

    <style name="AppTheme.ZmonStatus"></style>

    <style name="AppTheme.ZmonStatus.Row">
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppTheme.ZmonStatus.Text">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="AppTheme.ZmonStatus.Text.InQueue">
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/status_ok</item>
    </style>

    <style name="AppTheme.ZmonStatus.Text.ActiveWorkers">
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">@color/status_warning</item>
    </style>

    <style name="AppTheme.ZmonStatus.Text.TotalWorkers">
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/status_warning</item>
    </style>

    <style name="AppTheme.AddTeam"></style>

    <style name="AppTheme.AddTeam.Container"></style>

    <style name="AppTheme.AddTeam.Text">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="AppTheme.AddTeam.Button">
        <item name="android:textSize">16dp</item>
    </style>

</resources>
