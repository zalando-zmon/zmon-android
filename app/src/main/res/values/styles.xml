<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/windowBackground</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Navigation"></style>

    <style name="AppTheme.Navigation.Drawer">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorSecondary</item>
    </style>

    <style name="AppTheme.Navigation.Drawer.Header">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Navigation.Drawer.Header.Image"></style>

    <style name="AppTheme.Navigation.Drawer.Header.Image.User">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="AppTheme.Navigation.Drawer.Header.Text">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Navigation.Drawer.Header.Text.Username">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="AppTheme.Navigation.Item">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="AppTheme.Navigation.Item.Text">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Navigation.Item.Image">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="AppTheme.Toolbar.Item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.Toolbar.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="AppTheme.List"></style>

    <style name="AppTheme.List.Item">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <!--
        <item name="android:layout_height">72dp</item>
        -->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="AppTheme.List.Item.Text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/list_item_title</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="AppTheme.List.Item.Text.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/list_item_subtitle</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.Login"></style>

    <style name="AppTheme.Login.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Login.TextView.Error">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorError</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="AppTheme.Login.Checkbox">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Login.Button">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.ZmonStatus"></style>

    <style name="AppTheme.ZmonStatus.Row">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="AppTheme.ZmonStatus.Text">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AppTheme.ZmonStatus.Text.InQueue">
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/status_ok</item>
    </style>

    <style name="AppTheme.ZmonStatus.Text.ActiveWorkers">
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">@color/status_warning</item>
    </style>

    <style name="AppTheme.ZmonStatus.Text.TotalWorkers">
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/status_warning</item>
    </style>

    <style name="AppTheme.AddTeam"></style>

    <style name="AppTheme.AddTeam.Container"></style>

    <style name="AppTheme.AddTeam.Text">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="AppTheme.AddTeam.Button">
        <item name="android:textSize">16dp</item>
    </style>

    <!-- Alert Details -->
    <style name="AppTheme.AlertDetail"></style>

    <style name="AppTheme.AlertDetail.Row">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="AppTheme.AlertDetail.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/dividerColor</item>
    </style>

    <style name="AppTheme.AlertDetail.Text">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="AppTheme.AlertDetail.Text.Label">
        <item name="android:textColor">@color/list_item_subtitle</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.AlertDetail.Text.Value">
        <item name="android:textColor">@color/list_item_title</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
