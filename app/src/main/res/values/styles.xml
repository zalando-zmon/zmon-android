<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Login">
    </style>

    <style name="AppTheme.Login.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.Login.Button">
        <item name="android:background">@color/zalando_orange</item>
    </style>

    <style name="AppTheme.ZmonStatus">
    </style>

    <style name="AppTheme.ZmonStatus.Row">
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppTheme.ZmonStatus.Text">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="AppTheme.ZmonStatus.Text.InQueue">
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/status_ok</item>
    </style>

    <style name="AppTheme.ZmonStatus.Text.ActiveWorkers">
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">@color/status_warning</item>
    </style>

    <style name="AppTheme.ZmonStatus.Text.TotalWorkers">
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/status_warning</item>
    </style>

    <style name="AppTheme.AlertStatus">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="AppTheme.AlertStatus.Message">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
