<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme.Navigation.Drawer.Header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/app_image"
            style="@style/AppTheme.Navigation.Drawer.Header.Image"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/ic_zmon_grey_24dp" />

        <TextView
            android:id="@+id/app_label"
            style="@style/AppTheme.Navigation.Drawer.Header.Text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/app_name" />

    </LinearLayout>

    <TextView
        style="@style/AppTheme.Navigation.Drawer.Header.Text.Username"
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>