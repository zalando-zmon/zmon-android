<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/AppTheme.AlertDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/AppTheme.AlertDetail.Row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/AppTheme.AlertDetail.Text.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alertdetail_label_description" />

            <TextView
                android:id="@+id/description"
                style="@style/AppTheme.AlertDetail.Text.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View style="@style/AppTheme.AlertDetail.Divider" />

        <LinearLayout
            style="@style/AppTheme.AlertDetail.Row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/AppTheme.AlertDetail.Text.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alertdetail_label_team" />

            <TextView
                android:id="@+id/team"
                style="@style/AppTheme.AlertDetail.Text.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View style="@style/AppTheme.AlertDetail.Divider" />

        <LinearLayout
            style="@style/AppTheme.AlertDetail.Row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/AppTheme.AlertDetail.Text.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alertdetail_label_responsibleteam" />

            <TextView
                android:id="@+id/responsible_team"
                style="@style/AppTheme.AlertDetail.Text.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View style="@style/AppTheme.AlertDetail.Divider" />

        <LinearLayout
            style="@style/AppTheme.AlertDetail.Row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/AppTheme.AlertDetail.Text.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alertdetail_label_status" />

            <TextView
                android:id="@+id/status"
                style="@style/AppTheme.AlertDetail.Text.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View style="@style/AppTheme.AlertDetail.Divider" />

        <LinearLayout
            style="@style/AppTheme.AlertDetail.Row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/AppTheme.AlertDetail.Text.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alertdetail_label_priority" />

            <View
                android:id="@+id/priority"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin" />
        </LinearLayout>

        <View style="@style/AppTheme.AlertDetail.Divider" />

        <LinearLayout
            style="@style/AppTheme.AlertDetail.Row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/AppTheme.AlertDetail.Text.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alertdetail_label_condition" />

            <TextView
                android:id="@+id/condition"
                style="@style/AppTheme.AlertDetail.Text.Code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View style="@style/AppTheme.AlertDetail.Divider" />

        <LinearLayout
            style="@style/AppTheme.AlertDetail.Row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/AppTheme.AlertDetail.Text.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alertdetail_label_last_modified" />

            <TextView
                android:id="@+id/last_modified"
                style="@style/AppTheme.AlertDetail.Text.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View style="@style/AppTheme.AlertDetail.Divider" />

        <LinearLayout
            style="@style/AppTheme.AlertDetail.Row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/AppTheme.AlertDetail.Text.Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alertdetail_label_last_modified_by" />

            <TextView
                android:id="@+id/last_modified_by"
                style="@style/AppTheme.AlertDetail.Text.Value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>